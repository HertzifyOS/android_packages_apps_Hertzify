<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/about_title">

    <!-- Info -->
    <com.android.settingslib.widget.TopIntroPreference
        android:title="@string/about_info" />

    <!-- Website -->
    <Preference
        android:title="@string/about_website_title"
        android:icon="@drawable/ic_about"
        android:summary="@string/about_website_summary">
        <intent
            android:action="android.intent.action.VIEW"
            android:data="https://hertzifyos.com" />
    </Preference>

    <!-- Telegram -->
    <Preference
        android:title="@string/about_telegram_title"
        android:icon="@drawable/ic_telegram"
        android:summary="@string/about_telegram_summary">
        <intent
            android:action="android.intent.action.VIEW"
            android:data="https://t.me/HertzifyOS" />
        </Preference>

    <!-- Github -->
    <Preference
        android:title="@string/about_github_title"
        android:icon="@drawable/ic_github"
        android:summary="@string/about_github_summary">
        <intent
            android:action="android.intent.action.VIEW"
            android:data="https://github.com/HertzifyOS" />
    </Preference>

    <PreferenceCategory
        android:key="contributors"
        android:title="@string/about_contributors_title" />

    <!-- Contributor -->
        <Preference
            android:title="@string/about_contributor_title"
            android:summary="@string/about_contributor_summary">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/sponsors/hdzungx" />
        </Preference>

</PreferenceScreen>
