    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/spoofing_title" >

    <com.hertzify.settings.preferences.SecureSettingSwitchPreference
        android:key="gms_cert_chain"
        android:title="@string/gms_cert_chain_title"
        android:summary="@string/gms_cert_chain_summary"
        android:defaultValue="false" />

    <com.hertzify.settings.preferences.KeyboxDataPreference
        android:key="keybox_data_setting"
        android:title="@string/keybox_data_title"/>

    <com.hertzify.settings.preferences.PifDataPreference
        android:key="pif_data_setting"
        android:title="@string/pif_data_title"/>

    <com.hertzify.settings.preferences.SystemPropertySwitchPreference
        android:key="persist.sys.pihooks.gphotos"
        android:title="@string/gphotos_spoof_title"
        android:summary="@string/gphotos_spoof_summary"
        android:defaultValue="true" />

